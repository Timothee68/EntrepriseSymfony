{% extends 'base.html.twig' %}

{% block title %}Employé !{% endblock %}

{% block body %}

    <h1 class="text-center mt-4 mb-5">Liste des employés</h1>

    <div class="container">
        <button class="btn bg-secondary"><a href="{{ path('add_employe') }}">Ajouter un employé(e)</a></button>
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Employés</th>
                    <th scope="col">Editer</th>
                    <th scope="col">Supprimer</th>
                </tr>
            </thead>
            <tbody>
            {% for employe in employes %}
            <tr>
                <th><a href="{{ path('show_employe', {'id': employe.id }) }}">{{ employe }}</a></th> 
                <th><a href="{{ path('edit_employe', {'id': employe.id }) }}"><i class="fa-solid fa-pen-nib"></i></a></th> 
                <th><a href="{{ path('delete_employe', {'id': employe.id }) }}"><i class="fa-solid fa-trash"></i></a></th> 
            </tr>
            {% endfor %}
                
            </tbody>
        </table>
    </div> 
{% endblock %}
