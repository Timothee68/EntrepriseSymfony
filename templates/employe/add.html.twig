{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
     {% if edit %}
     <h1 class="text-center mb-4" >Editer un employé(e)</h1>
     {% else %}
     <h1 class="text-center mb-4" >Ajouter un employé(e)</h1>
     {% endif %}

    {# {{ form(formAddEmploye) }} #}
          {{ form_start(formAddEmploye) }}
          {{ form_errors(formAddEmploye) }}
               <div class="container">
                    <div class="row">
                         <div class="col-4 mb-4 mt-4">
                              {{ form_row(formAddEmploye.nom) }}
                         </div>
                         <div class="col-4 mb-4 mt-4">
                              {{ form_row(formAddEmploye.prenom) }}
                         </div>
                         <div class="col-4 mb-4 mt-4">   
                              {{ form_row(formAddEmploye.ville) }}
                         </div>
                         <div class="col-4 mb-4">   
                              {{ form_row(formAddEmploye.dateNaissance) }}
                         </div>
                         <div class="col-4 mb-4">   
                              {{ form_row(formAddEmploye.dateEmbauche) }}
                         </div>
                         <div class="col-4">        
                              {{ form_row(formAddEmploye.entreprise) }}
                         </div>
                         <div class="row">
                         <div class="col-4 mt-4">   
                              {{ form_row(formAddEmploye.submit, { 'label': 'Submit me' }) }}
                         </div>
                         </div>     
                    </div>   
               </div> 
     {{ form_end(formAddEmploye) }}
    

{% endblock %}






